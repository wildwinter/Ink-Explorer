{
  "name": "ink-explorer",
  "version": "0.0.3",
  "inkjsVersion": "2.3.2",
  "description": "Allows users to explore Dink and Ink files.",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "npm run dev",
    "build": "check-node-version --node \">=22.12\" && vite build",
    "clean": "rm -rf dist dist-electron release",
    "preview": "npm run build && electron .",
    "dist-mac": "npm run clean && npm run build && electron-builder --mac",
    "dist-win": "npm run clean && npm run build && electron-builder --win --x64",
    "dist": "npm run clean && npm run build && electron-builder --mac && electron-builder --win --x64",
    "test:ink": "node scripts/testInk.js"
  },
  "keywords": [
    "electron"
  ],
  "author": "Ian Thomas",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "check-node-version": "^4.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "net.wildwinter.inkexplorer",
    "productName": "InkExplorer",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "build/InkExplorer.ico",
        "to": "InkExplorer.ico"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/InkExplorer.icns",
      "identity": null
    },
    "win": {
      "target": "nsis",
      "icon": "build/InkExplorer.ico"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "d3": "^7.9.0",
    "inkjs": "^2.3.2"
  }
}